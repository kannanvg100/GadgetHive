{{> admin/navbar}}
<div class="container-fluid">
    <div class="row vh-100">
        <div class="d-flex">
            
            {{> admin/sidebar currTab = "categories"}}
            <div class="border-end ms-2"></div>
            <div class="ms-3 mt-4 flex-grow-1">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fs-6 fw-bold">Categories</span>

                    <div class="d-flex gap-3">
                        <div class="search-wrapper position-relative" hidden>
                            <img src="/images/Search.svg" alt="" width="16px" height="16px" class=" position-absolute">
                            <input type="text" class="flex-grow-1 border border-1 rounded header-search" id="navbar-search-input" placeholder="Serach for user">
                        </div>
                        <a href="/category/add">
                            <div class="btn-2">
                                <img src="/images/add.svg" alt="" width="16px" height="16px">
                                <span>New category</span>
                            </div>
                        </a>
                    </div>

                </div>
                <div class="m-1 border rounded w-100 mt-4">
                    <table class="table table-hover" id="tbl">
                    <thead>
                            <tr>
                                <th scope="col" style="border-top-left-radius: 0.375rem !important;"></th>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Products count</th>
                                <th scope="col" style="border-top-right-radius: 0.375rem !important;">Created Date</th>
                            </tr>
                        </thead>
                            <tbody>
                                
                                {{#each categories}}
                                
                                <tr>
                                    <td></td>
                                    <td>{{this._id}}</th>
                                    <td>{{this.name}}</td>
                                    <td>{{this.description}}</td>
                                    <td>{{getCount ../counts this._id}}</td>
                                    <td>{{getDate this.createdAt}}</td>
                                </tr>

                                {{/each}}
        
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

{{> admin/footer}}

<script>

addRowHandlers = () => {
	const table = document.getElementById("tbl")
	const rows = table.getElementsByTagName("tr")
	for (i = 1; i < rows.length; i++) {
		const currentRow = table.rows[i]
		const createClickHandler = row => {
			return () => {
				const cell = row.getElementsByTagName("td")[1]
				const id = cell.innerHTML
				window.location.href = `/category/edit/?id=${id}`
			}
		}
		currentRow.onclick = createClickHandler(currentRow)
	}
}
window.onload = addRowHandlers()

</script>


<style>
    #navbar-search-input{
        min-width: 300px;
        border: 1px solid #9CA3AF;
        background-color: #F9FAFB;
        border-radius: 8px;
        height: 32px;
        font-size: 12px;
        text-indent: 30px;
    }

    .search-wrapper input::placeholder{
        color: #9CA3AF;
    }

    #navbar-search-input:focus{
        outline: 1px solid #4D4DFF;
    }

    .search-wrapper img{
        position: absolute;
        left: 0;
        top: 50%;
        transform: translate(50%,-50%);
    }
    td{
        vertical-align: middle;
    }

</style>