{{> navbar}}

{{> categories categories = categories}}

<div class="container overflow-hidden">
    <div class="slider mt-3 mx-auto">

        {{#each banners}}
        <a href="{{this.link}}">
            <div class="slide">
                <img src="/assets/{{this.image}}" alt="" class="banner-image" />
            </div>
        </a>
        {{/each}}

        <button class="btn btn-next"> <img src="/images/Expand_right.svg" alt="" width="32px" height="32px"> </button>
        <button class="btn btn-prev"> <img src="/images/Expand_left.svg" alt="" width="32px" height="32px"> </button>
    </div>

    <div class="d-flex mt-5">
        <p class="h6 fw-bold flex-grow-1">Shop by Brands</p>
        <div class="d-flex gap-3">
            <img id="brand-scroll-left" onclick="scrollDiv(this)" 
                src="/images/Expand_left.svg" width="20px" height="20px" alt="">
            <img id="brand-scroll-right" onclick="scrollDiv(this)"
                src="/images/Expand_right.svg" width="20px" height="20px" alt="">
        </div>
    </div>
    <div class="horizontal-scroll-container mt-3">
        <div class="horizontal-scroll-item">
            {{#each brands}}
            <a href="/shop/all/?f=brand%3D{{this._id}}" class="me-3"><img class="brand-logo" src="/assets/{{this.image}}"
                    alt=""></a>
            {{/each}}
        </div>
    </div>

    <div>
        <p class="h6 mt-5 mb-3 fw-bold">Newly launched</p>
        <div class="d-flex justify-content-start gap-3">
            {{#each latestProducts}}
            {{> product-list-item product = this}}
            {{/each}}
        </div>
    </div>

    <div>
        <p class="h6 mt-5 mb-3 fw-bold">Premium Devices</p>
        <div class="d-flex justify-content-start gap-3">
            {{#each premiumProducts}}
            {{> product-list-item product = this}}
            {{/each}}
        </div>
    </div>


</div>

{{> footer}}

<style>
    .horizontal-scroll-container {
        position: relative;
        overflow-x: auto;
        white-space: nowrap;
    }

    .horizontal-scroll-container::-webkit-scrollbar {
        display: none;
    }

    .horizontal-scroll-item {
        display: inline-block;
        width: 300px;
    }
</style>

<style>
    .slider {
        width: 100%;
        max-width: 1000px;
        height: 220px;
        position: relative;
        overflow: hidden;
    }

    .slide {
        width: 100%;
        max-width: 1000px;
        height: 220px;
        position: absolute;
        transition: all 0.5s;
    }

    .slide img {
        height: 220px;
        width: 1000px;
    }

    .btn {
        position: absolute;
        width: 40px;
        height: 40px;
        padding: 0px;
        border: none;
        border-radius: 50%;
        z-index: 10px;
        cursor: pointer;
        font-size: 18px;
    }

    .btn img {
        line-height: 40px;
    }

    .btn:hover {
        background-color: #fff;
    }

    .btn:active {
        transform: scale(1.1);
    }

    .btn-prev {
        top: 45%;
        left: 2%;
    }

    .btn-next {
        top: 45%;
        right: 2%;
    }
</style>

<script>
    const scrollContainer = document.querySelector('.horizontal-scroll-container')
    function scrollDiv(target) {
        if (target.id === 'brand-scroll-left') {
            scrollContainer.scrollBy({
                left: -100,
                behavior: 'smooth'
            });
        } else {
            scrollContainer.scrollBy({
                left: 100,
                behavior: 'smooth'
            });
        }
    }
</script>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        const wrapper = document.querySelectorAll(".wrapper")
        wrapper.forEach(item => {
            item.addEventListener("click", (event) => {
                const idDiv = item.querySelector('#_id');
                window.location.href = `/shop/p/${idDiv.innerHTML}`
            })
        })
    })
</script>

<script>

    const slides = document.querySelectorAll(".slide");
    slides.forEach((slide, indx) => {
        slide.style.transform = `translateX(${indx * 100}%)`;
    });

    const nextSlide = document.querySelector(".btn-next");

    let curSlide = 0;
    let maxSlide = slides.length - 1;

    nextSlide.addEventListener("click", function () {
        if (curSlide === maxSlide) curSlide = 0;
        else curSlide++;

        slides.forEach((slide, indx) => {
            slide.style.transform = `translateX(${100 * (indx - curSlide)}%)`;
        });
    });


    const prevSlide = document.querySelector(".btn-prev");
    prevSlide.addEventListener("click", function () {
        if (curSlide === 0) curSlide = maxSlide;
        else curSlide--;

        slides.forEach((slide, indx) => {
            slide.style.transform = `translateX(${100 * (indx - curSlide)}%)`;
        });
    });

</script>