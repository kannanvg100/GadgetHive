{{> navbar}}
<br>
<div class="container w-50 mx-auto">
    <div class="row">
        <div class="p-0">
            <span class="h5 ps-0">Order Details</span>
            <span class="text-muted">#{{order._id}}</span>
            <span class="d-block mt-1 ps-0">Ordered on {{getDate order.createdAt}}</span>
            <span class="fw-bold ps-0 status-span mt-2">{{formatOrderStatus order.status}}</span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="d-flex flex-wrap border rounded justify-content-start gap-4 p-3 mx-0">
            <div>
                <p class="fw-bold">Shipping Address: </p>
                <span class="d-block">{{order.address.name}}</span>
                <span class="d-block">{{order.address.streetname}}</span>
                <span class="d-block">{{order.address.town}}</span>
                <span class="d-block">{{order.address.pincode}}</span>
                <span class="d-block">{{order.address.phone}}</span>
            </div>
            <div>
                <p class="fw-bold">Payment Mode: </p>
                <span class="d-block">{{order.paymentMode}}</span>
            </div>
        </div>

        <div class="border rounded mt-3">
            <p class="fw-bold mt-4">Items in this order</p>
            <table class="table table-hover" id="tbl">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    {{#each order.items}}

                    <tr>
                        <td class="text-center">
                            <div style="width: 50px; height: 50px;">
                                <img src="{{getFirstImageUrl this.product._id.images}}" alt="" height="50px">
                            </div>
                        </td>
                        <td>{{this.product._id.title}}</td>
                        <td>Qty: {{this.quantity}}</th>
                        <td>{{formatPrice (product this.product.price this.quantity)}}</td>
                    </tr>

                    {{/each}}

                    <tr>
                        <td> </td>
                        <td></td>
                        <td></td>
                        <td class="fw-bold">{{formatPrice order.totalAmount}}</td>
                    </tr>

                </tbody>
            </table>
        </div>

        <div class="mt-3">
            {{#if (eq order.status 'processing')}}
            <span class="btn-1 float-end cancel-button">Cacel Order</span>
            {{/if}}
        </div>

    </div>
</div>

{{> footer}}

<script>
    const cancelBtn = document.querySelector('.cancel-button')
    cancelBtn.addEventListener('click', () => {
        openModal("Cancel order", "Are you sure to cancel this order?", "Continue to Cancel")
    })
    confirmButton.addEventListener('click', () => {
        fetch("/orders/cancel/?id={{order._id}}", {
            method: "GET",
            headers: {
                "Content-Type": "application/json",
                'X-Requested-With': 'XMLHttpRequest'
            },
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast("Order cancelled")
                    document.querySelector('.status-span').textContent = "Status: Cancelled"
                }
                else
                    showToast(data.message)
            })
            .catch(error => {
                showToast("Something went wrong")
            })
        closeModal()

    })
</script>